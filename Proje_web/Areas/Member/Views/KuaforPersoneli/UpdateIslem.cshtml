@model IslemUpdateVm

<h2>İşlem Güncelle</h2>

<form asp-action="UpdateIslem" method="post">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="IslemAdi" class="control-label">İşlem Adı</label>
        <input asp-for="IslemAdi" class="form-control" />
        <span asp-validation-for="IslemAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IslemUcreti" class="control-label">İşlem Ücreti</label>
        <input asp-for="IslemUcreti" class="form-control" type="decimal" step="0.01" />
        <span asp-validation-for="IslemUcreti" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IslemSuresi" class="control-label">İşlem Süresi (Dakika)</label>
        <input asp-for="IslemSuresi" class="form-control" type="number" />
        <span asp-validation-for="IslemSuresi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="ListIslem" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
