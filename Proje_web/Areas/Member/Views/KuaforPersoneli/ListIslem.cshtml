@model List<IslemListVm>

<h2>İşlem Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            
            <th>İşlem Adı</th>
            <th>Ücret</th>
            <th>Süre (Dakika)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IslemAdi</td>
                <td>@item.IslemUcreti</td>
                <td>@item.IslemSuresi</td>
                <td>
                    <a asp-action="UpdateIslem" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Güncelle</a>
                    <a asp-action="DeleteIslem" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Bu işlemi silmek istediğinize emin misiniz?');">Sil</a>
                    <input type="hidden" name="Id" value="@item.Id" />
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="CreateIslem" class="btn btn-success">Yeni İşlem Ekle</a>
