@model IslemCreateVm

<h2>İşlem Ekle</h2>

<form asp-action="CreateIslem" method="post">
    <div class="form-group">
        <label for="IslemAdi">İşlem Adı</label>
        <input  asp-for="IslemAdi" type="text" class="form-control" id="IslemAdi" name="IslemAdi" maxlength="50" required />
        <span asp-validation-for="IslemAdi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IslemUcreti">Ücret</label>
        <input  asp-for="IslemUcreti" type="number" class="form-control" id="IslemUcreti" name="IslemUcreti" step="0.01" required />
        <span asp-validation-for="IslemUcreti" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IslemSuresi">Süre (Dakika)</label>
        <input asp-for="IslemSuresi" type="number" class="form-control" id="IslemSuresi" name="IslemSuresi" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

